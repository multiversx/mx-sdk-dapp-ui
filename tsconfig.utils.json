{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "rootDir": "src",
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "lib": ["ES2020", "DOM"],
    "baseUrl": "src",
    "paths": {
      "constants/*": ["constants/*"]
    }
  },
  "include": [
    "src/utils/getDetectedBrowser.ts", 
    "src/constants/browser.enum.ts", 
    "src/constants/window.constants.ts",
    "src/components/functional/unlock-panel/helpers/getIsMetaMaskAvailable.ts",
    "src/components/functional/unlock-panel/helpers/getIsExtensionAvailable.ts",
    "src/utils/EventBus.ts"
  ]
}
